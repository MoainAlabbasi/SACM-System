# ===================================
# S-ACM Environment Variables
# ===================================

# Django Secret Key (أنشئ مفتاحاً عشوائياً)
# يمكنك استخدام: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this

# Debug Mode (False في الإنتاج)
DEBUG=True

# Allowed Hosts (افصل بفاصلة)
ALLOWED_HOSTS=localhost,127.0.0.1

# ===================================
# Google Gemini AI (مطلوب)
# ===================================
# للحصول على API Key:
# 1. اذهب إلى: https://makersuite.google.com/app/apikey
# 2. أنشئ مفتاح API جديد
# 3. انسخ المفتاح هنا

GEMINI_API_KEY=your-gemini-api-key-here

# ===================================
# Email Configuration (Gmail)
# ===================================
# للحصول على App Password:
# 1. اذهب إلى: https://myaccount.google.com/security
# 2. فعّل "التحقق بخطوتين"
# 3. اذهب إلى "كلمات مرور التطبيقات"
# 4. أنشئ كلمة مرور جديدة لـ "البريد"

EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-character-app-password

# ===================================
# Database (اختياري - للـ PostgreSQL)
# ===================================
# إذا تركت هذه فارغة، سيستخدم SQLite
# DB_ENGINE=django.db.backends.postgresql
